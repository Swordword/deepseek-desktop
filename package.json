{
  "name": "deepseek-desktop",
  "version": "1.0.0",
  "description": "DeepSeek Desktop Client - A native desktop application for DeepSeek AI services",
  "main": "dist/main/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.electron.json",
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development tsc --project tsconfig.electron.json && electron .",
    "prod": "cross-env NODE_ENV=production tsc --project tsconfig.electron.json && electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "generate-icons": "node scripts/generate-icons.js"
  },
  "keywords": [
    "deepseek",
    "ai",
    "desktop",
    "electron",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/deepseek-desktop.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/deepseek-desktop/issues"
  },
  "homepage": "https://github.com/yourusername/deepseek-desktop#readme",
  "devDependencies": {
    "@types/node": "^20.11.24",
    "cross-env": "^7.0.3",
    "electron": "^34.3.0",
    "electron-builder": "^24.13.3",
    "sharp": "^0.33.5",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.deepseek.desktop",
    "productName": "DeepSeek Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg", "zip"],
      "icon": "assets/icons/icon.icns",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": ["nsis", "zip"],
      "icon": "assets/icons/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "DeepSeek Desktop"
    },
    "compression": "maximum",
    "asar": true,
    "asarUnpack": [],
    "removePackageScripts": true,
    "removePackageKeywords": true,
    "npmRebuild": false,
    "buildDependenciesFromSource": true,
    "nodeGypRebuild": false,
    "extraResources": [],
    "extraMetadata": {
      "main": "dist/main/index.js",
      "dependencies": {},
      "devDependencies": {}
    }
  }
}
